<body>
    

<!--Start: Nav  -->
<div class="ui sidebar vertical menu sidebar-menu" id="sidebar">
  <div class="item">
    <div class="header">Get Started</div>
    <div class="menu">
      <% if(currentUser) {%> 
      <a class="item" href="/user/profile/<%= currentUser.id %>">
        
        <div>
          <i class="icon tachometer alternate"></i>
          Dashboard
        </div>
      </a>
        <% } %> 
      <% if(currentUser && currentUser.isAdmin){ %>
      <a class="item" href="/user/register-staff">
        <div>
          <i class="user icon"></i>
          Register a staff
        </div>
      </a>
      <% } %>
       <% if(!currentUser ){ %>
      <a class="item" href="/user/register">
        <div>
          <i class="user icon"></i>
          Register your farm
        </div>
      </a>
       <a class="item" href="/user/login">
        <div>
          <i class="address book outline icon"></i>
          Login
        </div>
      </a>
      <% } %>
      <% if(currentUser && currentUser.isAdmin) {%> 
      <a class="item" href="/user">
        
        <div>
          <i class="icon users alternate"></i>
          Staff
        </div>
      </a>
        <% } %> 
    </div>
    
  </div>
<div class="item">
<div class="menu">
         <a class="item" href="#">
        <div>
          <i class="info icon"></i>
          About our service
        </div>
      </a>
       <a class="item" href="#">
        <div>
          <i class="paper plane outline icon"></i>
          Contact Us
        </div>
      </a>
    </div>
</div>
 
 
</div>

<nav class="ui top fixed  inverted menu">
  <div class="left menu">
        <a href="#" class="sidebar-menu-toggler item" data-target="#sidebar">
      <i class="sidebar icon"></i>
    </a>
    <a href="#" class="header item"> farmOp </a>
  </div>
  <div class="middle-menu ">
     <a href="#" class="header item"> farmOp </a>
    <a href="#" class="header item"> farmOp </a>
  </div>
   

  <div class="right menu">
    <% if(currentUser ) {%> 
    <a href="/notification" class="item">
      <i class="bell icon"></i>
    </a>
    <%} %> 
    <div class="ui dropdown item right-menu">
      <i class="user cirlce icon"></i>
      <div class="menu">
        <% if(!currentUser) { %>
        <a href="/user/login" class="item">
          <i class="login circle icon"></i> Login</a
        >

        <% }else {%>
        <a href="/user/update-profile" class="item">
          <i class="edit icon"></i> Update Profile</a
        >
        <a href="/user/logout" class="item">
          <i class="sign-out icon"></i>
          Logout
        </a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

