<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui green button" href="/cropexpense/<%= expense._id %> ">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/cropexpense/<%= expense._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="expense">Expense</label>
                            <input type="text" id="expense" name="expense[expense]" value="<%= expense.expense %>" >
                        </div>
                        <div class="ui form">
                            <div class="field  required">
                                <label for="name">Crop</label>
                                <select name="expense[name]" id="name" class="ui search dropdown">
                                    <option value="<%= expense.name %> ">
                                        <%= expense.name %>
                                    </option>
                                    <% for(let crops of crop) {%>
                                        <option value="<%= crops.crop %> ">
                                            <%= crops.crop %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="field required">
                            <label for="amount">Amount</label>
                            <input type="number" id="amount" name="expense[amount]" value="<%= expense.amount %>">
                        </div>
                        
                       
                        <div class="field  required">
                            <label for="note">Note</label>
                            <textarea name="expense[note]" id="note" cols="30" rows="3"><%= expense.note %> </textarea>
                        </div>
                        <button class="ui button fluid green">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>