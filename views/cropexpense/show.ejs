<% layout('layouts/boilerplate') %>


  <div class="ui raised segments">
    <div class="ui segment green">
      <p class="ui huge header">
        <%= expense.expense %>
      </p>
    </div>
    <div class="ui piled segments">
      <div class="ui yellow segment">
        <p>
          <%= expense.date.toDateString() %>
        </p>
      </div>
      <div class="ui segment">
        <p>
          <%= expense.amount %>
        </p>
      </div>
      <div class="ui segment">
        <p>
          <%= expense.category %>
        </p>
      </div>
    </div>
    <div class="ui segment">
      <p>
        <%= expense.note %>
      </p>
    </div>
    <div class="ui segment">
      <a class="ui green button" href="/cropexpense">Back</a>
      <div class="ui buttons right floated">
        <a href="/cropexpense/<%=expense._id %>/edit" class="ui yellow button">Edit</a>
        <div class="or"></div>
        <button class="ui  negative button" id="test">Delete</button>
        <div class="ui modal test">
          <div class="header">Are you sure you want to delete <%= expense.expense %>? </div>
          <div class="content">
            <p>If you delete, all data associated with <%= expense.expense %> will be deleted permanently.</p>
          </div>
          <div class="actions">
            <div class="ui buttons right floated ">
              <div class="segments horizontal ui">
                <div class="ui segment">
                  <a href="" class="ui cancel mini yellow button">No</a>
                </div>
                <div class="ui segment">
                  <form action="/cropexpense/<%= expense._id %>?_method=DELETE " method="POST">
                    <button class="ui negative button ">Yes</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  