<% layout('layouts/boilerplate') %>
<h1>Crop</h1>


    <table class="ui celled selectable unstackable table">
        <thead>
            <tr>
                <th>Event</th>
                <th>Date</th>
                <th>Leader</th>
                <th>Remark</th>
                <th class="right aligned">Action</th>
    
            </tr>
        </thead>
        <% for(let event of cropEvents){ %>
            <tbody>
                <tr>
                    <td>
                        <%= event.event %>
                    </td>
                    <td>
                        <%= event.date.toDateString()%>
                    </td>
                    <td>
                        <%= event.leader %>
                    </td>
                    <td>
                        <%= event.note %>
                    </td>
                    <td>
                    <a  href="/report/activities/crop/<%= event._id %>"><i class=" green caret square right outline float right icon"></i></a>
                    </td>
                </tr>
                <% } %>
    
    </table>