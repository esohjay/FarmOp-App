<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui green button" href="/cropinflow/<%= income._id %> ">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/cropinflow/<%= income._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="income">Income</label>
                            <input type="text" id="income" name="income[income]" value="<%= income.income %>" >
                        </div>
                        <div class="ui form">
                            <div class="field  required">
                                <label for="name">Crop</label>
                                <select name="income[name]" id="name" class="ui search dropdown">
                                    <option value="<%= income.name %> ">
                                        <%= income.name %>
                                    </option>
                                    <% for(let crops of crop) {%>
                                        <option value="<%= crops.crop %> ">
                                            <%= crops.crop %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="field required">
                            <label for="amount">Amount</label>
                            <input type="number" id="amount" name="income[amount]" value="<%= income.amount %>">
                        </div>
                        
                       
                        <div class="field  required">
                            <label for="note">Note</label>
                            <textarea name="income[note]" id="note" cols="30" rows="3"><%= income.income %> </textarea>
                        </div>
                        <button class="ui button fluid green">Add</button>
                    </div>

                </form>

            </div>
        </div>
    </div>