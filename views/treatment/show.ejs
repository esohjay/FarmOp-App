<% layout('layouts/boilerplate') %>

<div class="ui segments">
  <div class="ui centered huge header green segment">
    <p class="color-green"><%= treatment.treatmentName %></p>
  </div>
  <div class="ui segments">
    <div class="ui yellow segment">
      <p><%= treatment.drug %></p>
    </div>
    <div class="ui segment">
      <p><%= treatment.dose %></p>
    </div>
  </div>
  <div class="ui horizontal segments">
    <div class="ui green segment">
      <p><%= treatment.date.toDateString() %></p>
    </div>
    <div class="ui green segment">
      <p><%= treatment.name %></p>
    </div>
    <div class="ui green segment">
      <p><%= treatment.cost %></p>
    </div>
  </div>
  

  <div class="ui segment">
    <p><%= treatment.note %></p>
  </div>
  <div class="ui green segment">
    <a class="ui btn button" href="/treatment">Back</a>
    <div class="ui buttons right floated">
       <% if(currentUser && currentUser.isAdmin) {%>
      <a href="/treatment/<%= treatment._id %>/edit" class="ui btn2 button">Edit</a>
      <div class="or"></div>
      <button class="ui negative button" id="test">Delete</button>
      <% } %> 
      <div class="ui modal test">
        <div class="header">
          Are you sure you want to delete <%= treatment.treatment %> task?
        </div>
        <div class="content">
          <p>
            If you delete, <%= treatment.treatment %> task will be deleted permanently.
          </p>
        </div>
        <div class="actions">
          <div class="ui buttons right floated">
            <div class="segments horizontal ui">
              <div class="ui segment">
                <a href="" class="ui cancel mini yellow button">No</a>
              </div>
              <div class="ui segment">
                <form
                  action="/treatment/<%= treatment._id %>?_method=DELETE "
                  method="POST"
                >
                  <button class="ui negative button">Yes</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
