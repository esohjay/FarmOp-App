<% layout('layouts/boilerplate') %>
<div class="ui grid">
  <div class="ui eleven wide column centered">
     <a class="ui btn button" href="/input">Back</a>
    <div class="ui raised segment">
      <form class="myFormValidate" action="/input" method="POST">
        <div class="ui form">
          <div class="field required">
            <label for="input">Input Type</label>
            <input type="text" id="input" name="input[inputType]" value="<%= inputType %>" placeholder="e.g Fertilizer" />
          </div>
          <div class="ui form">
                            <div class="field  required">
                                <label for="name">Crop</label>
                                <select name="input[name]" id="name" class="ui search dropdown">
                                    <option value="<%= name %>">Select Crop</option>
                                    <% for(let crops of crop) {%>
                                        <option value="<%= crops.crop %>">
                                            <%= crops.crop %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
          <div class="field required">
            <label for="drug"> Input Name </label>
            <input
              type="text"
              id="drug"
              value="<%= inputName %>"
              name="input[inputName]"
              placeholder="e.g Urea Fertilizer"
            />
          </div>
          <div class="field required">
            <label for="dose"> Quantity </label>
            <input
              type="text"
              id="dose"
              value="<%= quantity %>"
              name="input[quantity]"
              placeholder="quantity used"
            />
          </div>
          <div class="field required">
            <label for="date">Date</label>
            <input
              type="date"
              id="date"
              value="<%= date %>"
              name="input[date]"
              placeholder="Date"
            />
          </div>
           <div class="field required">
            <label for="cost">Cost</label>
            <input
              type="number"
              id="cost"
              value="<%= cost %>"
              name="input[cost]"
              placeholder="Cost"
            />
          </div>
          
          <div class="field required">
            <label for="note">Note</label>
            <textarea
              name="input[note]"
              id="note"
              cols="30"
              rows="3"
            ><%= note %></textarea>
          </div>
          <button class="ui button fluid btn">Create Input</button>
        </div>
      </form>
    </div>
  </div>
</div>
