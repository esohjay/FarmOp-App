<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui green button" href="/expense/<%= expense._id %> ">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/expense/<%= expense._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="expense">Expense</label>
                            <input type="text" id="expense" name="expense[expense]" value="<%= expense.expense %>" >
                        </div>
                        <div class="field required">
                            <label for="name">Animal</label>
                            <select name="expense[name]" id="name" class="ui tag dropdown search">
                                <option value="<%= expense.name %> "><%= expense.name %> </option>
                                <option value="Poultry">Chicken</option>
                                <option value="Fishery">CatFish</option>
                                <option value="Ruminant">Cattle</option>
                                <option value="Others">Sheep</option>
                                <option value="Poultry">Goat</option>
                                <option value="Fishery">Rabbit</option>
                                <option value="Ruminant">Snail</option>
                                <option value="Others">Grasscutter</option>
                                <option value="Fishery">Horse</option>
                                <option value="Ruminant">Donkey</option>
                                <option value="Others">Guinea Pig</option>
                        
                            </select>
                        </div>
                        <div class="field required">
                            <label for="amount">Amount</label>
                            <input type="number" id="amount" name="expense[amount]" value="<%= expense.amount %>">
                        </div>
                        
                        <div class="ui form">
                            <div class="field required">
                                <label for="category">Category</label>
                                <select name="expense[category]" id="category" class="ui search dropdown">
                                    <option value="<%= expense.category %>"><%= expense.category %></option>
                                    <option value="Fishery">Fishery</option>
                                    <option value="Poultry">Poultry</option>
                                    <option value="Pig">Pig</option>


                                </select>
                            </div>
                        </div>
                        <div class="field  required">
                            <label for="note">Note</label>
                            <textarea name="expense[note]" id="note" cols="30" rows="3"><%= expense.note %> </textarea>
                        </div>
                        <button class="ui button fluid green">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>