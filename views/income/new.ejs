<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui green button" href="/income">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/income" method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="income">Income</label>
                            <input type="text" id="income" name="income[income]" placeholder="Income">
                        </div>
                        <div class="field required">
                            <label for="name">Animal</label>
                            <select name="income[name]" id="name" class="ui tag dropdown search">
                                <option value="">Select Name</option>
                                <option value="Poultry">Chicken</option>
                                <option value="Fishery">CatFish</option>
                                <option value="Ruminant">Cattle</option>
                                <option value="Others">Sheep</option>
                                <option value="Poultry">Goat</option>
                                <option value="Fishery">Rabbit</option>
                                <option value="Ruminant">Snail</option>
                                <option value="Others">Grasscutter</option>
                                <option value="Fishery">Horse</option>
                                <option value="Ruminant">Donkey</option>
                                <option value="Others">Guinea Pig</option>
                        
                            </select>
                        </div>
                        <div class="field required">
                            <label for="amount">Amount</label>
                            <input type="number" id="amount" name="income[amount]" placeholder="Amount">
                        </div>
                        <div class="field required">
                            <label for="date">Date</label>
                            <input type="date" id="date" name="income[date]" placeholder="Date">
                        </div>
                        
                        <div class="field  required">
                            <label for="note">Note</label>
                            <textarea name="income[note]" id="note" cols="30" rows="3"> </textarea>
                        </div>
                        <button class="ui button fluid green">Add</button>
                    </div>

                </form>

            </div>
        </div>
    </div>