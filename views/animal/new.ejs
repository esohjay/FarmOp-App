<% layout('layouts/boilerplate') %>

<div class="ui grid">
  <div class="ui eleven wide column centered">
    <a class="ui btn button" href="/animal">Back</a>
    <div class="ui raised segment">
      <form class="myFormValidate" action="/animal" method="POST">
        <div class="ui form">
          <div class="field required">
            <label for="name">Name</label>
            <select
              name="animal[name]"
              id="name"
              class="ui tag dropdown search"
            >
              <option value="<%= name%>">Select Name</option>
               <option value="Chicken">Chicken</option>
               <option value="Turkey">Turkey</option>
              <option value="Ostrich">Ostrich</option>
              <option value="Guinea Fowl">Guinea Fowl</option>
               <option value="Pig">Pig</option>
                                    <option value="Catfish">CatFish</option>
                                    <option value="Cattle">Cattle</option>
                                    <option value="Sheep">Sheep</option>
                                    <option value="Goat">Goat</option>
                                    <option value="Rabbit">Rabbit</option>
                                    <option value="Snail">Snail</option>
                                    <option value="Grasscutter">Grasscutter</option>
                                    <option value="Horse">Horse</option>
                                    <option value="Donkey">Donkey</option>
                                    <option value="Guinea Pig">Guinea Pig</option>
            </select>
          </div>
          <div class="field required">
            <label for="category">Category</label>
            <select
              name="animal[category]"
              id="category"
              class="ui dropdown search"
            >
              <option value="<%= category %>">Select Category</option>
              <option value="Poultry">Poultry</option>
              <option value="Fishery">Fishery</option>
              <option value="Ruminant">Ruminant(Cattle, Sheep, Goat...)</option>
              <option value="Non-Ruminant">Non-Ruminant(Pig, Rabbit, Snail...)</option>
            </select>
          </div>
          <div class="field required">
            <label for="tag"> Batch ID </label>
            <input
              type="text"
              id="tag"
              name="animal[batch]"
              value="<%=batch %>"
              placeholder="Batch ID"
            />
          </div>
          <div class="field required">
            <label for="variety">Breed</label>
            <input
              type="text"
              id="variety"
              name="animal[breed]"
              value="<%=breed %>"
              placeholder="Breed"
            />
          </div>
          <div class="field required">
            <label for="variety">Quantity</label>
            <input
              type="number"
              id="variety"
              name="animal[quantity]"
              value="<%=quantity %>"
              placeholder="Quantity"
            />
          </div>
          <div class="field required">
            <label for="date">Date of Arrival</label>
            <input
              type="date"
              id="date"
               name="animal[dateOfArrival]"
              value="<%=date %>"
              placeholder="Date Arrived"
            />
          </div>
          <div class="field required">
            <label for="source">Source</label>
            <input
              type="text"
              id="source"
              value="<%=source %>"
              name="animal[source]"
              placeholder="Source"
            />
          </div>

          <div class="field required">
            <label for="description">Brief Description</label>
            <textarea
              name="animal[description]"
              id="description"
              placeholder="Remark"
              cols="30"
              rows="3"
            >
<%=description %></textarea
            >
          </div>
          <button class="ui button fluid btn">Add Animal</button>
        </div>
      </form>
    </div>
  </div>
</div>
