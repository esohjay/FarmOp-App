<% layout('layouts/boilerplate') %>
<div class="ui   grid">
    <div class="ui eleven wide column centered">
        <a class="ui green button" href="/animal/<%= animal._id %>">Back</a>
        <div class="ui raised segment">
            <form class="myFormValidate" action="/animal/<%= animal._id %>?_method=PUT" method="POST" >
                <div class="ui  form">
                    <div class="field required">
                        <label for="name">Name</label>
                        <select name="animal[name]" id="name" class="ui  dropdown search">
                            <option value="<%= animal.name %>"><%= animal.name %></option>
                            <option value="Poultry">Chicken</option>
                            <option value="Fishery">CatFish</option>
                            <option value="Ruminant">Cattle</option>
                            <option value="Others">Sheep</option>
                            <option value="Poultry">Goat</option>
                            <option value="Fishery">Rabbit</option>
                            <option value="Ruminant">Snail</option>
                            <option value="Others">Grasscutter</option>
                            <option value="Fishery">Horse</option>
                            <option value="Ruminant">Donkey</option>
                            <option value="Others">Guinea Pig</option>
                    
                        </select>
                    </div>
                    <div class="field required">
                        <label for="category">Category</label>
                        <select name="animal[category]" id="status" class="ui dropdown search">
                        <option value="<%= animal.category %> "><%= animal.category %></option>
                        <option value="Poultry">Poultry</option>
                        <option value="Fishery">Fishery</option>
                        <option value="Ruminant">Ruminant(Cattle, Sheep, Goat...)</option>
                        <option value="Others">Others(Pig, Rabbit, Snail...)</option>
                    
                        </select>
                    </div>
                    <div class="field required">
                        <label for="tag"> Batch ID </label>
                        <input type="text" id="tag" name="animal[batch]" value="<%= animal.batch %> " readonly>
                    </div>
                    <div class="field required">
                        <label for="variety">Breed</label>
                        <input type="text" id="variety" name="animal[breed]" value="<%= animal.breed %> ">
                    </div>

                     <div class="field required">
                        <label for="source">Source</label>
                        <input type="text" id="source" name="animal[source]" value="<%= animal.source %> ">
                    </div>
                    <div class="field required">
                        <label for="variety">Quantity</label>
                        <input type="number" id="variety" name="animal[quantity]" value=<%=animal.quantity %> placeholder="Quantity">
                    </div>
                    <div class="field required">
                        <label for="description">Brief Description</label>
                        <textarea name="animal[description]" id="description" cols="30" rows="3"  ><%= animal.description %></textarea>
                    </div>
                    <button class="ui button fluid green">Update Animal</button>
                </div>
                <div class="ui error message"></div>
            </form>

        </div>
    </div>
</div>





    