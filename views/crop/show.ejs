                <a href="" class="ui cancel mini yellow button">No</a>
              </div>
              <div class="ui segment">
                <form action="/crop/<%= crop._id %>?_method=DELETE " method="POST">
                  <button class="ui negative mini button ">Yes</button>
                </form>
              </div>
              
              
            </div>
            
          </div>
        </div>
      </div>
      
    </div>
  </div>
</div>

