<% layout('layouts/boilerplate') %>

<div class="ui   grid">
    <div class="ui eleven wide column centered">
        <a class="ui green button" href="/crop/<%= crop._id %>">Back</a>
        <div class="ui raised segment">
            <form class="myFormValidate" action="/crop/<%= crop._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="ui  form">

                    <div class="field required">
                        <label for="name">Name of Crop</label>
                        <input type="text" id="name" name="crop[crop]" value="<%= crop.crop %>">
                    </div>
                    <div class="field required">
                        <label for="variety"> Variety </label>
                        <input type="text" id="variety" name="crop[variety]"  value="<%= crop.variety %>">
                    </div>
                    <div class="ui form">
                        <div class="field  required">
                            <label for="field">Field</label>
                            <select id="field" name="crop[field]" class="ui search dropdown">
                                
                                <% for(let location of field) {%>
                                    <option value="<%= location.name %>. <%= location.location %>  " <%= crop.field === location.name ? 'selected' : '' %> >
                                        <%= location.name %>. <%= location.location %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                    </div>
                   
                    <div class="field required">
                        <label for="coverage">SIze of Land Covered</label>
                        <input type="text" id="coverage" name="crop[coverage]"  value="<%= crop.coverage %>">
                    </div>
                    <div class="field ">
                        <label for="image">Image</label>
                        <input type="file" id="image" name="image" value="<%= crop.image %>">
                    </div>
                    <div class="field required">
                        <label for="description">Brief Description</label>
                        <textarea name="crop[description]" id="description" cols="30" rows="3"><%= crop.description %></textarea>
                    </div>
                    <button class="ui button fluid green">Update Crop</button>
                </div>
                <div class="ui error message"></div>
            </form>

        </div>
    </div>






    