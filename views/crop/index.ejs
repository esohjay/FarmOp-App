<% layout('layouts/boilerplate') %>

    <a class="ui green button" href="/crop/new">Add a Crop</a>

    <% for(let crop of crops){ %>
<div class="ui green raised segment">
    <div class="ui  very relaxed styled unstackable items">
        <div class="item">
            <% if (crop.image.url){ %>
                <a href="/crop/<%= crop._id %>" class="ui tiny image">
                    <img src="<%= crop.image.url %>">
                </a>
                <% } else{%>
                    <a href="/crop/<%= crop._id %>" class="ui tiny image">
                        <img
                            src="https://images.unsplash.com/photo-1520564431999-5b020993cb07?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MzR8fGxpdmVzdG9ja3xlbnwwfHwwfA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60">
                    </a>
                    <% } %>
    
                        <div class="middle aligned content">
                            <div class="header">
    
                                <%= crop.crop %>
                                    <a href="/crop/<%= crop._id %>"><i
                                            class=" green caret square right outline float right icon"></i></a>
    
    
                            </div>
                            <div class="extra">
                                <%= crop.date.toDateString() %>
                            </div>
                        </div>
        </div>
    
    </div>
</div>

       

        <%} %>