<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui btn button" href="/cropevent/<%= event._id %>">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/cropevent/<%= event._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="event">Event</label>
                            <input type="text" id="event" name="event[event]" value="<%= event.event %> ">
                        </div>
                        <div class="ui form">
                            <div class="field  required">
                                <label for="name">Crop</label>
                                <select name="event[name]" id="name" class="ui search dropdown">
                                    <option value="<%= event.name %> "><%= event.name %> </option>
                                    <% for(let crops of crop) {%>
                                        <option value="<%= crops.crop %> ">
                                            <%= crops.crop %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="ui form">
                            <div class="field ">
                                <label for="leader">Lead by</label>
                                <select name="event[leader]" id="leader" class="ui search dropdown">
                                    <option value="<%= event.leader %>"><%= event.leader %></option>
                                    <% for(let leader of user){ %>
                                        <option value="<%= leader.fname %> ">
                                            <%= leader.fname %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                         <div class="field required">
                            <label for="date">Date</label>
                            <input type="date" id="date" name="event[date]" value="<%= eventDate %>">
                        </div>
                        <div class="field  required">
                            <label for="note">Remark</label>
                            <textarea name="event[note]" id="note" cols="30" rows="3"><%= event.note %> </textarea>
                        </div>
                        <button class="ui button fluid btn">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>


    