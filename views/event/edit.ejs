<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui green button" href="/event/<%= event._id %>">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/event/<%= event._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="event">Event</label>
                            <input type="text" id="event" name="event[event]" value="<%= event.event %> ">
                        </div>
                        <div class="field required">
                            <label for="name">Animal</label>
                            <select name="event[name]" id="name" class="ui tag dropdown search">
                                <option value="<%= event.name %> "><%= event.name %> </option>
                                <option value="Poultry">Chicken</option>
                                <option value="Fishery">CatFish</option>
                                <option value="Ruminant">Cattle</option>
                                <option value="Others">Sheep</option>
                                <option value="Poultry">Goat</option>
                                <option value="Fishery">Rabbit</option>
                                <option value="Ruminant">Snail</option>
                                <option value="Others">Grasscutter</option>
                                <option value="Fishery">Horse</option>
                                <option value="Ruminant">Donkey</option>
                                <option value="Others">Guinea Pig</option>
                        
                            </select>
                        </div>
                        <div class="ui form">
                            <div class="field required">
                                <label for="leader">Lead by</label>
                                <select name="event[leader]" id="leader" class="ui search dropdown">
                                    <option value="<%= event.leader %>"><%= event.leader %></option>
                                    <% for(let leader of staff){ %>
                                        <option value="<%= leader.fname %> ">
                                            <%= leader.fname %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="field  required">
                            <label for="note">Remark</label>
                            <textarea name="event[note]" id="note" cols="30" rows="3"><%= event.note %> </textarea>
                        </div>
                        <button class="ui button fluid green">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>


    