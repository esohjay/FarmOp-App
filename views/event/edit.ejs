<% layout('layouts/boilerplate') %>
    <div class="ui   grid">
        <div class="ui eleven wide column centered">
            <a class="ui btn button" href="/event/<%= event._id %>">Back</a>
            <div class="ui raised segment">
                <form class="myFormValidate" action="/event/<%= event._id %>?_method=PUT " method="POST">
                    <div class="ui  form">

                        <div class="field required">
                            <label for="event">Event</label>
                            <input type="text" id="event" name="event[event]" value="<%= event.event %> ">
                        </div>
                        <div class="field required">
                            <label for="name">Animal</label>
                            <select name="event[name]" id="name" class="ui tag dropdown search">
                                <option value="<%= event.name %> "><%= event.name %> </option>
                               <option value="Chicken">Chicken</option>
                               <option value="Turkey">Turkey</option>
                                    <option value="Ostrich">Ostrich</option>
                                    <option value="Guinea Fowl">Guinea Fowl</option>
                                     <option value="Pig">Pig</option>
                                    <option value="Catfish">CatFish</option>
                                    <option value="Cattle">Cattle</option>
                                    <option value="Sheep">Sheep</option>
                                    <option value="Goat">Goat</option>
                                    <option value="Rabbit">Rabbit</option>
                                    <option value="Snail">Snail</option>
                                    <option value="Grasscutter">Grasscutter</option>
                                    <option value="Horse">Horse</option>
                                    <option value="Donkey">Donkey</option>
                                    <option value="Guinea Pig">Guinea Pig</option>
                        
                            </select>
                        </div>
                        <div class="ui form">
                            <div class="field required">
                                <label for="leader">Lead by</label>
                                <select name="event[leader]" id="leader" class="ui search dropdown">
                                    <option value="<%= event.leader %>"><%= event.leader %></option>
                                    <% for(let leader of staff){ %>
                                        <option value="<%= leader.fname %> ">
                                            <%= leader.fname %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </div>
                        <div class="field ">
                            <label for="date">Date</label>
                            <input
                            type="date"
                            id="date"
                            name="event[date]"
                           value="<%= eventDate %>"
                            />
                       </div>
                        <div class="field  required">
                            <label for="note">Remark</label>
                            <textarea name="event[note]" id="note" cols="30" rows="3"><%= event.note %></textarea>
                        </div>
                        <button class="ui button fluid btn">Save</button>
                    </div>

                </form>

            </div>
        </div>
    </div>


    