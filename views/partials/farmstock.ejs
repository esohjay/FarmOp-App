                        <br />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <a class="ui btn2 button" href="/farmstock">Reset</a>
              <button class="ui btn button" type="submit">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  

