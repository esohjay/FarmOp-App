    <div class="ui accordion">
      <div class="title">
        <a class="ui btn button">Filter</a>
      </div>
      <div class="content">
        <div class="ui grid">
          <div class="ui eleven wide column">
            <form action="/farmstock" method="GET">
              <div class="ui segments">
                <div class="ui horizontal segments">
                  <div class="ui segment">
                  <p>Name</p>
                  <% names.forEach(function(name, i) { %> <%
                  if(!nameFilter.includes(name)) {%> <% nameFilter.push(name) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="name[]"
                        value="<%= name %>"
                      />
                      <label for="name"><%= name %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } )%>
                </div>
                 <div class="ui segment">
                  <p>Category</p>
                  <% for(let category of categories) {%> <%
                  if(!categoryFilter.includes(category)) {%> <%
                  categoryFilter.push(category) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="category[]"
                        value="<%= category %>"
                      />
                      <label for="category"><%= category %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
    
                 </div>
                
                

                  <div class="ui horizontal segments">
                  <div class="ui segment">
                  <p>Sire</p>
                  <% for(let father of sire) {%> <%
                  if(!sireFilter.includes(father)) {%> <%
                  sireFilter.push(father) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="sire[]"
                        value="<%= father %>"
                      />
                      <label for="sire"><%= father %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
                 <div class="ui segment">
                  <p>Dam</p>
                  <% for(let mother of dam) {%> <%
                  if(!damFilter.includes(mother)) {%> <% damFilter.push(mother)
                  %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="dam[]"
                        value="<%= mother %>"
                      />
                      <label for="dam"><%= mother %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
    <div class="ui segment">
                  <p>Batch</p>
                  <% for(let group of batch) {%> <%
                  if(!batchFilter.includes(group)) {%> <%
                  batchFilter.push(group) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="batch[]"
                        value="<%= group %>"
                      />
                      <label for="batch"><%= group %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
  </div>

                
                
                

                <div class="ui horizontal segments">
                   <div class="ui segment">
                  <p>Breed</p>
                  <% for(let variety of breed) {%> <%
                  if(!breedFilter.includes(variety)) {%> <%
                  breedFilter.push(variety) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="breed[]"
                        value="<%= variety %>"
                      />
                      <label for="breed"><%= variety %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
    
                <div class="ui segment">
                  <p>Production Stage</p>
                  <% for(let stage of pStage) {%> <%
                  if(!pStageFilter.includes(stage)) {%> <%
                  pStageFilter.push(stage) %>
                  <div class="field">
                    <div class="ui checkbox">
                      <input
                        type="checkbox"
                        class="hidden"
                        name="productionStage[]"
                        value="<%= stage %>"
                      />
                      <label for="pStage"><%= stage %></label>
                      <br />
                    </div>
                  </div>

                  <% } %> <% } %>
                </div>
    
  </div>

               
                <div class="ui horizontal segments">
                  <div class="ui segment">
                    <p>Sex</p>
                    <div class="field">
                      <div class="ui checkbox">
                        <input
                          type="checkbox"
                          class="hidden"
                          name="sex[]"
                          value="Male"
                        />
                        <label for="sex">Male</label>
                        <br />
                      </div>
                    </div>
                    <div class="field">
                      <div class="ui checkbox">
                        <input
                          type="checkbox"
